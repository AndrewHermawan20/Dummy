@namespace DummyWeb_Server

<div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel"style="position: fixed;width: 100%;height: 100%; background: rgba(0,0,0,0.7);">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">@ModalHeader</h5>
                </div>
                <div class="modal-body">
                    @ChildComponent
                </div>
                <div class="modal-footer">
                     <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="Close">Tutup</button>
                     @ChildButtonComponent
                </div>
            </div>
        </div>
    </div>


@code {

    [Parameter]
    public string ModalHeader { get; set; } = string.Empty;

    [Parameter]
	public RenderFragment ChildComponent { get; set; }

    [Parameter]
	public RenderFragment ChildButtonComponent { get; set; }

    [Parameter]
	public EventCallback Close { get; set; }
}
